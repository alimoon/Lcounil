page {
    background-color:#DDDDDD;
    /*text-align: center;*/
}
.vall{
  text-align: center;
  background-color: #DDDDDD;
}
.activitydetailview {
    background-color: #fff;
    margin: auto;
    padding-bottom: 90rpx;
}
.toptextview {
    display: inline-flex;
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    padding: 20rpx 0 20rpx 0;
}
.toptxtview_leftline {
    width: 6%;
    background-color: #4EC046;
    height: 4rpx;
    margin-left:20rpx;
}
.toptxtview_text {
    color: #4EC046;
    font-size: 32rpx;
}
.toptxtview_rightline {
    width: auto;
    background-color: #4EC046;
    height: 2rpx;
    width: 60%;
    margin-right:20rpx;
}
.activity_time {
    word-break: break-all;
    word-wrap: break-word;
    padding: 20rpx;
    line-height:40rpx;
}
.activity_leftlbl {
    font-weight: 800;
    font-size: 30rpx;
}
.activity_rightlbl {
    font-size: 30rpx;
}
.activity_bg_title {
    display: inline-flex;
    justify-content: space-between;
}

.activity_source {
    padding: 20rpx;
    line-height:40rpx;
    display: inline-flex;
    justify-content: flex-start;
}
.voice {
    float: left;
    color: #DF3C43;
    line-height: 30rpx;
    font-size: 28rpx;
    border: 1rpx solid #DF3C43;
    border-radius: 6rpx;
    padding: 6rpx;
    margin-right: 15rpx;
}
/*活动概况*/
.desc_content {
    word-break: break-all;
    overflow: hidden;
    text-overflow: ellipsis;
    height: auto;
}
/*展开收起*/
.fold {
    display: inline-flex;
    flex-direction: row;
    align-items: center;
    width: 150rpx;
}
.fold_extend1 {
    content: '展开';
    color: #4B4441;
    font-size: 28rpx;
    float: right;
}
.fold_extend2 {
    content: '收起';
    font-size: 28rpx;
    float: right;
    color: #45AB59;
}
.arrow_bottom {
    width: 16rpx;
    height: 16rpx;
    border-left: 1rpx solid #4B4441;
    border-bottom: 1rpx solid #4B4441;
    transform:rotate(-45deg);
    margin-left: 10rpx;
    margin-bottom:8rpx;
}
.arrow_up {
    width: 16rpx;
    height: 16rpx;
    border-top: 1rpx solid #45AB59;
    border-right: 1rpx solid #45AB59;
    transform:rotate(-45deg);
    margin-top: 15rpx;
    margin-left: 10rpx;
}
.fold_extend_textextend {
    overflow: visible;
    display: -webkit-box;
    -webkit-box-orient: vertical;
}
.fold_extend_textfold {
    display: -webkit-box;
    overflow: hidden;
    text-overflow: ellipsis;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 6;
}
/*立即注册*/
.register_view {
    display: inline-block;
    position: fixed;
    bottom: 0;
    background-color: white;
    /*width: 100%;*/
    height: 90rpx;
}
.tagview {
    color: #4EC046;
    font-size: 24rpx;
    float: left;
    text-align: center;
    width: 60%;
    height: 90rpx;
    line-height: 90rpx;
    border-top: 1rpx solid #EFEFEF;
}
.registernow_btn {
    float: right;
    font-size: 36rpx;
    width: 40%;
    height: 90rpx;
    line-height: 90rpx;
    z-index: 100;
    vertical-align: center;
    text-align:center;
    color: #fff;
    background-color: #DF3C43;
}
.disabled_registernow_btn {
    float: right;
    font-size: 36rpx;
    width: 40%;
    height: 90rpx;
    line-height: 90rpx;
    z-index: 100;
    vertical-align: center;
    text-align:center;
    color: #fff;
    background-color: #ccc;
}
view {
