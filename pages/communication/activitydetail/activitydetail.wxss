/*展开收起*/
.fold_extend1 {
    content: '展开';
    font-size: 32rpx;
    float: right;
    padding-right: 20rpx;
}
.fold_extend2 {
    content: '收起';
    font-size: 28rpx;
    float: right;
    color: #45AB59;
    padding-right: 20rpx;
}
.fold_extend_textextend {
    overflow: visible;
    display: -webkit-box;
    -webkit-box-orient: vertical;
}
.fold_extend_textfold {
    display: -webkit-box;
    overflow: hidden;
    text-overflow: ellipsis;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 4;
}
