<!--communication.wxml-->
<import src="../../wxParse/wxParse.wxml" />
<import src='../../DIYComponents/topbanner.wxml'/>
<template is="topbannner" data="{{topBannerData: dataSet}}"></template>
<scroll-view scroll-y class="com_scroll" style="width: {{imageWidth}}px;" scroll-into-view="upperview" bindscrolltolower="lower" scroll-top="100rpx">
  <block wx:for-items="{{communicationList}}" wx:key="{{index}}">
      <navigator class="bury-wrapper  wx-li" url="newsdetail/newsdetail?id={{item.ID}}">
        <view style="padding-left:10px;padding-right:10px;">
           <text>{{communicationList[index].AddDate}} | {{communicationList[index].Title}}</text> 
        </view>
        <view style="width: {{imageWidth}}px; border-bottom: 1px #DDDDDD solid;  margin: 0 auto;  margin-top: 10px;  margin-bottom: 10px;margin-left:10px;">
        </view>
      </navigator>
  </block>
</scroll-view>
